<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>激活</title>
  </head>
  <body>
    <p id="message"></p>
  </body>
  <script type="text/javascript">
    function newXhr() {
      if (!XMLHttpRequest) {
        alert('您的浏览器不支持');
        return null;
      }
      return new XMLHttpRequest();
    }

    var xhr = new newXhr();

    function xhrResponse() {
      if (xhr.readyState === 4) {
        if (xhr.status === 200) {
          let data = JSON.parse(xhr.responseText) || { message: '' };
          document.getElementById('message').innerHTML = data.message;
        }
      }
    }

    function xhrError() {
      console.log('出错了');
    }

    if (xhr) {
      xhr.onreadystatechange = xhrResponse;
      xhr.onerror = xhrError;

      xhr.open('post', 'http://localhost:3003/api/user/public/veryifyActiveKey', true);
      xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded;charset=UTF-8');
      xhr.setRequestHeader('Authorization', `Bearer ${getQueryVariable('active_key')}`);
      xhr.send(`username=${getQueryVariable('username')}`);
    }

    function getQueryVariable(variable) {
      var query = window.location.search.substring(1);
      var vars = query.split('&');
      for (var i = 0; i < vars.length; i++) {
        var pair = vars[i].split('=');
        if (pair[0] == variable) {
          return pair[1];
        }
      }
      return false;
    }
  </script>
</html>
